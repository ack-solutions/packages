{
    "$schema": "https://unpkg.com/@changesets/config@2.3.1/schema.json",
    "changelog": [
        "@changesets/changelog",
        {
            "repo": "ack-solutions/packages"
        }
    ],
    "packages": [
        "packages/*"
    ],
    "commit": false,
    "access": "public",
    "baseBranch": "main",
    "updateInternalDependencies": "patch",
    "snapshot": {
        "useCalculatedVersion": true,
        "prereleaseTemplate": "${tag}"
    }
}
